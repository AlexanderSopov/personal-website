/*
 *	FONTS
 */
 
h1,h2,h3
 	font-family 'Source Code Pro', monospace
h1
	font-weight 900
h2,h3
	font-family 'Montserrat', sans-serif
	font-weight 600
h2
	font-size 1.3em
h3
	font-size 1em
p
	font-family 'Montserrat', sans-serif
	font-weight 400
	font-size 0.85em

.content-wrap
	h3
		text-decoration underline
.title
	h1
		margin-top 10px
		margin-bottom 5px
.italy
	font-style italic