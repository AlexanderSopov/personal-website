/*
 *	FONTS
 */
 
h1,h2
 	font-family 'Source Code Pro', monospace
h1
	font-weight 900
h2,h3, ul, ol
	font-family 'Montserrat', sans-serif
	font-weight 600
h2
	font-size 1.3em
h3
	font-size 1em
p
	font-family 'Montserrat', sans-serif
	font-weight 400
	font-size 0.85em
p strong
	font-size 0.95em
a.no-decor
	color black
h2
	a.no-decor
		text-decoration none
.content-wrap
	h3
		text-decoration underline
.title
	h1
		margin-top 10px
		margin-bottom 5px
.italy
	font-style italic
	
.left-aligned
	text-align left
.right-aligned
	text-align right
.center-aligned
	text-align center
	
@media only screen and (min-width 768px)
	h1
		font-size 2.1em
	h2
		font-size 1.5em
	h3
		font-size 1.25em
	p
		font-size 1em
		strong
			font-size 1.1em
	.md-center-aligned
		text-align center
