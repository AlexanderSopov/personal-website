/*
 *	FONTS
 */
 
h1,h2,h3
 	font-family 'Source Code Pro', monospace
h1
	font-weight 900
h2,h3
	font-family 'Montserrat', sans-serif
	font-weight 600
h2
	font-size 1.3em
h3
	font-size 1em
p
	font-family 'Montserrat', sans-serif
	font-weight 400
	font-size 0.85em

.content-wrap
	h3
		text-decoration underline
.title
	h1
		margin-top 10px
		margin-bottom 5px
.italy
	font-style italic
	
@media only screen and (min-width 768px)
	h1
		font-size 2.1em
	h2
		font-size 1.5em
	h3
		font-size 1.25em
	p
		font-size 1em
@media only screen and (min-width 1025px)
	h1
		font-size 2.25em
	h2
		font-size 1.75em
	h3
		font-size 1.5em
	p
		font-size 1.25em