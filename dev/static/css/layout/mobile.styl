headerHeight = 70px
padding-std = 40px
animationTime = 0.5s

body
	margin 0px
	padding 0px
	width 100%
	background-color rgba(0,0,0,0)
	
	
/*
 *	HEADER
 */
 
.page, header
	padding 0 padding-std
	width "calc(100% - %s * 2)" % padding-std
.red 
	background-color red
.blue 
	background-color blue
.red, .blue, .black
		color white
	.title
		border-color white
.black
	background-color #1a1b20
header
	overflow hidden
	transition all animationTime
	z-index 3
	background white
	height headerHeight
	#logo
		line-height "calc(%s - 35px)" % headerHeight
		float left
		display inline-block
		cursor pointer
		width 125px
		height 100%
		h3
			margin-top 25px
			height inherit
	#navbar
		float left
		display inline-block
		width 100px
		height headerHeight
		line-height "calc(%s - 35px)" % headerHeight
		transition all animationTime ease-out
		hr 
			position absolute
			top -100px
			left 00px
			width 100%
		ul
			list-style-type none
			margin 0px
			padding 0px
			li 
				height headerHeight
				p
					font-family 'Montserrat', sans-serif
					font-weight 200
					font-size 1.1em
					margin 0px
					margin-top 25px
					cursor pointer
	
/*
 *	CONTENT
 */

#header-padding
	padding 0
#header-img
	background url("img/headerImg-2-mini.jpg") no-repeat center center
	height 150px

.page
	padding padding-std
	text-align center
	.content
		margin-top 0px
.title
	border-bottom 1.5px solid grey

/*
 *	FOOTER
 */

#footer
	padding 20px
	text-align left
	color #fff
	min-height 300px
	h3
		font-weight 300
		font-family 'Josefin Sans', sans-serif
		