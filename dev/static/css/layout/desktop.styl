@media only screen and (min-width 1025px)
	width = 1000px
	margin = calc( (100% - 1000px) / 2 )
	.container
		width width
		margin-left margin
		margin-right margin
		.page .intro.ingress
			text-align justify
			display flex
			flex-wrap wrap
			.left-p
				width calc(50% - 25px)
				padding-right 25px
			.right-p
				width calc(50% - 25px)
				padding-left 25px
	
	#header-img
		background-image url("img/headerImg-3-large.jpg")
		background-size 100%
		height 400px
	