@media only screen and (min-width 768px)
	headerHeight = 120px
	_width = 500px
	header
		height headerHeight
		#logo
			width "calc( (100% - %s) / 2)" % _width
			h3
				font-size 1.5em
				margin-top 60px
				margin-left 40px
		#navbar ul
			li
				height headerHeight
	#header-padding
		height headerHeight
	.page
		width _width
		padding "100px calc( (100% - %s) / 2)" % _width
		
	.module
		table
		tr
			display initial
			td
				width calc(50% - 20px)
				padding 0px 10px
				text-align right
			td:nth-child(even)
				text-align left