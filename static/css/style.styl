/*
 *	FONTS
 */
 
h1
	font-size 2.9em
	font-family 'Palatino Linotype'
h2
	font-family 'Palatino Linotype'
	font-size 1.8em
h3
	font-family 'Palatino Linotype'
	font-size 1.3em
p
	font-family 'Josefin Sans', sans-serif
	font-weight 400
	font-size 1.2em

#footer .container div h3
	font-size 1.2em
	

/*
 *	HEADER
 */
 
header
	overflow hidden
	transition: all animationTime ease;
	display flex
	flew-wrap wrap
	z-index 3
	background: rgba(255,255,255,1);
	width:100%
	position fixed
	top:0px
	height headerHeight
	#logo
		display block
		cursor pointer
		width calc(100% / 2.2)
		text-align right
		h3
			padding-right 20px
	#navbar
		position relative
		margin 0px
		padding:0px
		width calc(100% / 1.8)
		height navHeight
		transition: all animationTime ease;
		hr 
			position absolute
			top -5px
			left 0px
			width 20%
		ul
			margin 0px
			padding 0px
			list-style-type none
			li
				border 1px solid white
				width 100%
				margin-top auto
				margin-bottom auto
				h3
					text-align left
					font-family 'Josefin Sans', sans-serif
					font-weight 300
					font-size 1.4em
					cursor pointer
			
#header-img
	position: fixed
	top headerHeight
	z-index 1
	width 100%
	img
		max-width 100%
		height auto
	
/*
 *	BODY
 */
 
#body
	z-index 2
	padding-top 90px
	background-color white
	width 100%
	position relative
	top 100px
.page
	text-align center
	margin-bottom:100px
.container
	width width
	margin-left margin
	margin-right margin

.title
	margin-top 80px
	h1
		margin 20px
.content
	margin-top 0px



/*
 *	FOOTER
 */
 

#footer
	padding 20px
	text-align left
	color #fff
	background-color #1a1b20
	min-height 200px
	margin 50px 0px 0px 0px
	h3
		font-weight 300
		font-family 'Josefin Sans', sans-serif


@media only screen and (min-width 375px)
	h1
		font-size 3.2em
	h2
		font-size 2em
	h3
		font-size 1.5em
	p
		font-size 1.4em
	header
		#logo
			width (100% / 2.5)
		#navbar
			width (100% / 1.5)

@media only screen and (min-width 769px)
	h1
		font-size 4em
	h2
		font-size 3em
	h3
		font-size 2em
	p
		font-size 1.6em
	header
		height 100px
		#logo
			width (100% / 2.5)
		#navbar
			width (100% / 1.5)
			ul li
				height 100px
				h3
					font-size 2em
	width = 750px
	margin = calc( (100% - 750px) / 2 )

	.container
		width width
		margin-left margin
		margin-right margin
		.page .content-wrap
			display flex
			flex-wrap wrap
			.content
				padding: 25px
				width calc(50% - 50px)
				text-align left
			.left
				text-align right
	.ingress p
		font-size 2em


@media only screen and (orientation: landscape)
	#body
		padding-top 50px
