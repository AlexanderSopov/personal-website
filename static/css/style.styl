headerHeight = 30vh
pageHeight = 100vh - headerHeight
padding = 3vh
fullscreenHeader = 100vh - 2*padding
@font-face 
	font-family: archive
	src: url(archive-font/Archive.otf) /* Safari, Android, iOS */
body
	margin:0px
	padding 0px
header
	background-color:#7d4627
	height fullscreenHeader
	color #F6F7F9
	padding padding
	text-align center
	.header-img
		width:100%
	h1
		font-size:2.5em
		margin: 3vh 0px 2vh 0px
	h2
		font-size:1.3em
		margin: 2vh 0px 2vh 0px
	p
		font-size 0.9em
	.navbar
		ul
			margin 2vh 0px 0px 0px
			padding 0px
			list-style-type none
			li
				display inline
				button
					color #F7F7F7
					background-color inherit
					border 0px
					padding 2vh
					font-size 1em
.page
	height pageHeight
	color:#494141
	padding: 15px
.page, .content
	display:none
.active
	display:block
#Skills
	background-color:#a8b6bf
#Projects
	background-color:#c9d8c5
#Experience
	background-color:#edd9c0
#Contact
	background-color:#fff
.tk-bebas-neue
	letter-spacing 3px